<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#E4E6EE"
    tools:context=".myProfileActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:id="@+id/imageWorkoutDemo">

    <ImageButton
        android:layout_width="250dp"
        android:layout_height="250dp"
        android:src="@drawable/circlecropped"
        android:backgroundTint="#E4E6EE"
        android:scaleType="centerInside"
        android:layout_margin="10dp"/>
    <!--<TextView
        android:id="@+id/userName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="username"
        android:clickable="true"
        android:textColor="#44a0d4"
        android:background="#ff0ff0"
        android:layout_toRightOf="@id/circularImageView"
        android:layout_marginTop="50dp"
        android:layout_marginLeft="30dp"
        android:textSize="26dp"
        android:textStyle="bold|italic"
        />-->
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_below="@id/imageWorkoutDemo"
        android:id="@+id/profileData"
        android:gravity="center">

       <!-- <Button
            android:id="@+id/calculateBMI"
            android:layout_width="250dp"
            android:layout_height="60dp"
            android:text="Calculate BMI"
            android:textStyle="bold|italic"
            android:padding="10dp"
            android:layout_marginBottom="8dp"
            android:textSize="25dp"
            android:textColor="@color/white"
            android:background="@drawable/button_start"
            />-->
        <Button
            android:id="@+id/stepCounter"
            android:layout_width="250dp"
            android:layout_height="60dp"
            android:text="Daily StepCount"
            android:textStyle="bold|italic"
            android:textSize="25dp"
            android:layout_marginTop="20dp"
            android:padding="10dp"
            android:textColor="@color/white"
            android:background="@drawable/button_start"
            />
        <!--<Button
            android:id="@+id/drinkWater"
            android:layout_width="250dp"
            android:layout_height="60dp"
            android:text="Drink water"
            android:textStyle="bold|italic"
            android:layout_marginBottom="8dp"
            android:textSize="25dp"
            android:padding="10dp"
            android:textColor="@color/white"
            android:background="@drawable/button_start"
            />-->
        <Button
            android:id="@+id/notificationSetting"
            android:layout_width="250dp"
            android:layout_height="60dp"
            android:text="Notification"
            android:textStyle="bold|italic"
            android:layout_marginTop="20dp"
            android:textSize="25dp"
            android:padding="10dp"
            android:textColor="@color/white"
            android:background="@drawable/button_start"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_marginTop="50dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/profileData"
        android:id="@+id/aboutLayout"
        android:gravity="center"
        android:orientation="horizontal">

        <ImageButton
            android:id="@+id/aboutUs"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:text="Calculate BMI"
            android:textStyle="bold|italic"
            android:textColor="@color/black"
            android:src="@drawable/ic_baseline_info_24"
            android:backgroundTint="#E4E6EE"
            />
        <ImageButton
            android:id="@+id/shareUs"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:text="Drink water"
            android:layout_marginLeft="50dp"
            android:textStyle="bold|italic"
            android:textColor="@color/black"
            android:src="@drawable/ic_baseline_share_24"
            android:backgroundTint="#E4E6EE"
            />
        <ImageButton
            android:id="@+id/rateUs"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:text="Notification"
            android:layout_marginLeft="50dp"
            android:textStyle="bold|italic"
            android:src="@drawable/ic_baseline_favorite_border_24"
            android:textColor="@color/black"
            android:backgroundTint="#E4E6EE"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="10dp"
        android:layout_below="@id/aboutLayout"
        android:gravity="center">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text=""
            android:layout_marginTop="50dp"
            android:id="@+id/AppVersionData"
            android:padding="10dp"
            android:textSize="17dp"
            android:gravity="center"
            android:textStyle="bold|italic"
            android:textColor="#44a0d4"
            />
    </LinearLayout>
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/navigation"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="0dp"
        android:layout_marginStart="0dp"
        android:background="?android:attr/windowBackground"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:menu="@menu/navigation" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</RelativeLayout>